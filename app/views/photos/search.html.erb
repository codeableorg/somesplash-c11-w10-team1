<section class="section">
  <div class="container">
    <h1 class="heading mb-4">Search</h1>
    <%= form_with url: "/search", method: :get do |f| %>
      <%= f.text_field :query %>
      <%= f.submit "Search", class: "button button--secondary" %>
    <% end %>
    
    <h1>Resultados de b√∫squeda</h1>
    <% if @results.present? %>
      <ul>
        <% @results.each do |result| %>
          <li><%= result.title %></li>
          <!-- Mostrar otros atributos relevantes -->
        <% end %>
      </ul>
    <% else %>
      <p>No se encontraron resultados.</p>
    <% end %>
  </div>
</section>




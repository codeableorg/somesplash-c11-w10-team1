<section class="section">
  <div class="container">
    <h1 class="heading mb-4">Edit Photo</h1>
    <%if @category.errors.any? %>
      <h2>Errors: </h2>
      <ul>
        <% @category.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <%end%>
      </ul>
    <%end %>
    <%=render "form", category: @category%>
    <%=link_to("Back", categories_path, class: "button button--subtle")%>
  </div>
</section>

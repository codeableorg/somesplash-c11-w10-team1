<section class="section">
  <div class="container">
    <h1 class="heading mb-4">Categories</h1>
    <%= link_to("New Category", new_category_path, class: "button button--secondary button--sm fit-content mb-4")%>
    <div>
      <% @categories.each do |category| %>
        <div class="card-list">
          <div class="department-card">
            <% if category.cover.attached? %>
              <%= image_tag(category.cover, alt: "Category Image", class: "department-card__image")%>
            <% end %>
            <div class="department-card__content">
              <%=link_to(category.name, category_path(category))%>
              <%# <a href="/departments/<%=department.id>"><%=department.name></a> %>
              <%# <a href="/departments/1">Engineering</a> %>
              <span><%=category.photos_count%> photos</span>
            </div>
            <div>
              <%=link_to("Edit", edit_category_path(category))%>
              <%=link_to("Destroy", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Esta usted Seguro?"})%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
